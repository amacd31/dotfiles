# Requires git >= v1.7.10 to use includes.
[include]
    # Include user configuration from .gituser
    # i.e. user.name and user.email
    path = .gituser
[color]
    ui = true
[alias]
    ls = ls-files
    st = status
    dc = diff --cached
    wdiff = diff --color-words
    csvdiff = diff --color-words --ignore-space-at-eol --word-diff-regex="[^[:space:],]+"
    pdiff = diff --patience
    praise = blame
[merge]
    tool = vimdiff
[achievement]
    autocommit = true
[commit]
    verbose = true
[diff]
    colorMoved = plain
